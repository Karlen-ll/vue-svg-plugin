{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ES2020"],
    "types": ["node", "mocha", "chai", "sinon"]
  },
  "include": ["src/**/*", "test/**/*"],
  "files": ["test/setup.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
